# Test environment variables for Lazy Rabbit Secretary API tests
# Copy this file to .env and customize as needed

# =====================
# Encryption Configuration (Required)
# =====================
# Generate with: openssl rand -base64 32
KEK_BASE64=your_base64_encoded_32_byte_key_here
KEK_VERSION=1

# =====================
# Test Configuration
# =====================
# Server URL for API tests (use https if using TLS)
TEST_BASE_URL=https://localhost:9090

# Test user credentials (must have admin role)
TEST_USERNAME=admin
TEST_PASSWORD=admin123
TEST_REALM=default

# SSL verification (set to false for self-signed certificates)
TEST_VERIFY_SSL=false

# =====================
# Database Configuration (for backend)
# =====================
DB_TYPE=sqlite
DB_FILE_PATH=test_lazy_rabbit_reminder.db

# For PostgreSQL testing (uncomment and configure)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=yourpassword
# DB_NAME=lazy_rabbit_test
# DB_SSL_MODE=disable

# =====================
# Optional Settings
# =====================
# Uncomment to enable debug logging
# DEBUG=true

# Custom test timeout in seconds
# TEST_TIMEOUT=30
